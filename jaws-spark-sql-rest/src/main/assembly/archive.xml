<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>archive</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	
	<fileSets>
		<fileSet>
			<directory>${basedir}/../jaws-ui/dist</directory>
			<outputDirectory>resources/webapp</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/temp_build</directory>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${basedir}/conf</directory>
			<outputDirectory>/conf</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}</directory>
			<outputDirectory>/target/</outputDirectory>
			<includes>
				<include>jaws-spark-sql-rest.jar</include>
			</includes>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>${basedir}/src/main/scripts/start-jaws.sh</source>
			<outputDirectory>/bin/</outputDirectory>
			
		</file>
	</files>
</assembly>
